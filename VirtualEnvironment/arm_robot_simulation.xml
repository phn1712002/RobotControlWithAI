<mujoco>
    <compiler angle="degree"/>
    <option gravity="0 0 0"/>
    <worldbody>
        <!--Light-->
        <light diffuse=".5 .5 .5" pos="0 0 1000" dir="0 0 -1"/>
    
        <!--Work plane -->
        <geom type="plane" size="100 100 .1" rgba="1 1 1 1"/>

        <!-- Body -->
        <body name="base" pos="0 0 .28">
            <geom type="box" size=".8 .5 .28" rgba="0 0 1 1"/>
            <joint name="fix" type="free"/>
            
            <body name="link_0" pos=".39 0 .5975">
                <geom type="cylinder" size=".1 .3175 0" rgba="1 0 0 1"/>
                <joint name="joint_link_0" type="hinge" pos="0 0 -.3175" axis="0 0 -1" limited="true" range="-90 90"/>
                
                <body name="link_1" pos="0 0 .9925">
                    <geom type="cylinder" size=".1 .675 0" rgba="1 1 0 1"/>
                    <joint name="joint_link_1" type="hinge" pos="0 0 -.675" axis="0 1 0" limited="true" range="-50 90"/>
                    
                    <body name="link_2" pos="0 0 1.695">
                        <geom type="cylinder" size=".1 1.02 0" rgba="1 1 1 1"/>
