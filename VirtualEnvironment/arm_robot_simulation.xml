                        <site name="pos_arm" pos="0 0 1.02" size=".1"/>
                        
                        <body name="gird_camera" pos="-.35 0 1.02">
                            <geom type="cylinder" size=".1 .25 0" rgba="1 1 1 1" euler="0 90 0"/>
                            <site name="pos_camera" pos="-.25 0 0" size=".1"/>
                            <camera name="camera" pos="-.25 0 0" mode="fixed" euler="0 180 -90"/>
                        </body>
                    </body>
                </body>
            </body>
        </body>

  </worldbody>
</mujoco>
